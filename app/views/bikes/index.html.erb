<% @bikes.each do |x| %>

	<div class="container bike">
	 <div class="col-lg-4"></div>
		<div class="col-lg-6">
			<%= image_tag x.image.url(:medium),class:"img-responsive" %>
			<h2>Description :</h2> 
			<h2><%= x.description %></h2>
			<h2>Model :</h2> 
			<h2><%= x.manufacturer %></h2>
			<h2>Price :</h2> 
			<h2><%= x.price %></h2>
		</div>
		<div class="col-lg-2"></div>
	</div>
<% end %>