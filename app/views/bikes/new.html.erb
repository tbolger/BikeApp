<h1>New Bike</h1>
<div class="page-wrapper">
	<div class="container-fluid">
		<div class="col-xl-3"></div>
			<div class="col-xl-10 form-group">
				<%= form_for @bike , html: { multipart: true } do |f| %>
					<%= f.label :description %>
					<%= f.text_area :description %>
					<br>
					<%= f.label :manufacturer %>
					<%= f.text_area :manufacturer %>
					<br>
					<%= f.label :price %>
					<%= f.number_field :price, :class => 'text_field', :step => 'any' %>
					<br>
					<%= f.label :image %>
					<%= f.file_field :image %>
					<hr>
					<br>
					<button type = "submit" class="btn btn-default"><%= f.submit %></button>
				<% end %>
			</div>
		<div class="col-xl-3"></div>
	</div>
</div>
